<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".RankingActivity">

    <Button
        android:id="@+id/ButtonMode0"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/ButtonMode1"
        android:text="기본 4x4" />

    <Button
        android:id="@+id/ButtonMode1"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="12dp"
        android:text="클린모드" />

    <Button
        android:id="@+id/ButtonMode2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@id/ButtonMode1"
        android:text="개발중" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rankingRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="691dp"
        android:layout_below="@id/ButtonMode1"
        android:background="#1E1E1E"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</RelativeLayout>